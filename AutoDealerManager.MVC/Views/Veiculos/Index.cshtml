@model IEnumerable<AutoDealerManager.MVC.ViewModels.VeiculoVM>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Veiculos</h3>
        <a href="@Url.Action("Create")" class="btn btn-primary">Adicionar novo veiculo</a>
    </div>
    <div class="card-body">
        @if (@TempData["Sucesso"] != null) {
            @Html.Partial("_Sucesso")
        }
        @Html.Partial("_Grid")
    </div>
</div>