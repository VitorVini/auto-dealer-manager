@model IEnumerable<AutoDealerManager.MVC.ViewModels.VeiculoVM>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Modelo)</th>
            <th>@Html.DisplayNameFor(model => model.AnoFabricacao)</th>
            <th>@Html.DisplayNameFor(model => model.Preco)</th>
            <th>@Html.DisplayNameFor(model => model.FabricanteId)</th>
            <th>@Html.DisplayNameFor(model => model.TipoVeiculo)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var veiculo in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => veiculo.Modelo)</td>
                <td>@Html.DisplayFor(modelItem => veiculo.AnoFabricacao)</td>
                <td>@Html.DisplayFor(modelItem => veiculo.Preco)</td>
                <td>@Html.DisplayFor(modelItem => veiculo.Fabricante.Nome)</td>
                <td>@Html.DisplayFor(modelItem => veiculo.TipoVeiculo)</td>
                <td>@Html.DisplayFor(modelItem => veiculo.Descricao)</td>
                <td style="width:160px">
                    <a class="btn btn-warning" href="@Url.Action("Edit", "Veiculos", new { id = veiculo.Id })">Editar</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Veiculos", new { id = veiculo.Id })">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>